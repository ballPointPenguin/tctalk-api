{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "Page",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "nav_menu": {
      "type": "boolean",
      "default": true
    },
    "menu_order": {
      "type": "integer",
      "min": 1
    },
    "content": {
      "type": "component",
      "repeatable": true,
      "component": "content.content-block"
    },
    "polis_conversations": {
      "collection": "polis-conversations",
      "via": "pages",
      "dominant": true
    }
  }
}
